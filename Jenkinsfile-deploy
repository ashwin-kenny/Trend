pipeline {
    agent 
    {
        label 'built-in'
    }

    environment {
        DOCKERHUB_USER = credentials('dockerhub-username')   // Jenkins Credential ID
        DOCKERHUB_PASS = credentials('dockerhub-password')   // Jenkins Credential ID
        AWS_ACCESS_KEY_ID = credentials('aws-access-key')   // Jenkins Credential ID
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
        IMAGE_NAME = "ashwkenny/trend-app" // Change this
        IMAGE_TAG  = "latest"
    }

    stages {

       stage('Terraform Infra') {
            steps {
              withAWS(credentials: 'aws-free-tier', region: 'us-east-1') {
                 sh """
                    cd infra
                    terraform init
                    terraform plan 
                 """
              }
            }
       }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the image and tag it with the Jenkins build number
                    env.DOCKER_IMAGE = docker.build "${DOCKER_REGISTRY}:${env.BUILD_NUMBER}"
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    // Use withRegistry to push with credentials
                    docker.withRegistry('https://registry.hub.docker.com'', DOCKER_CRED_ID) {
                        env.DOCKER_IMAGE.push()
                        // Optional: push a 'latest' tag as well
                        env.DOCKER_IMAGE.push('latest')
                    }
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    sh """
                    docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Configure kubectl for EKS') {
            steps {
                sh '''
                    aws configure set aws_access_key_id ${AWS_ACCESS_KEY_ID}
                    aws configure set aws_secret_access_key ${AWS_SECRET_ACCESS_KEY}
                    aws configure set region 'us-east-1'

                    aws eks update-kubeconfig --region 'us-east-1' --name 'trendapp'
                '''
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }

    post {
        always {
            sh 'docker logout'
            echo "Pipeline completed."
        }
    }
}
