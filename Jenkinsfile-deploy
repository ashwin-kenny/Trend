 pipeline {
    agent 
    {
        label 'built-in'
    }

    environment {
        DOCKER_CRED_ID = 'dockerhub-creds'
        AWS_ACCESS_KEY_ID = credentials('aws-access-key')   // Jenkins Credential ID
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
        DOCKER_REGISTRY = "ashwkenny/trend-app" // Change this
        DOCKER_IMAGE = ''
    }

    stages {

       stage('Terraform Infra') {
            steps {
                 sh """
                    export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                    export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
                    export AWS_REGION=us-east-1
                    cd infra
                    terraform init -reconfigure
                    terraform plan 
                    terraform apply --auto-approve
                 """
              
            }
       }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the image and tag it with the Jenkins build number
                     // env.DOCKER_IMAGE = docker.build "${DOCKER_REGISTRY}:${env.BUILD_NUMBER}"
                    docker.build("${env.DOCKER_REGISTRY}:${env.BUILD_NUMBER}")
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    // Use withRegistry to push with credentials
                    def img = docker.image("${env.DOCKER_REGISTRY}:${env.BUILD_NUMBER}")
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds') {
                        img.push()
                    }
                    }
                }
            }

        stage('Configure kubectl for EKS') {
            steps {
              withCredentials([aws(credentialsId: 'aws-free-tier', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                sh '''
                    aws eks update-kubeconfig --region 'us-east-1' --name 'trendapp-cluster'
                '''
            }
        }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }

    post {
        always {
            sh 'docker logout'
            echo "Pipeline completed."
        }
    }
}
